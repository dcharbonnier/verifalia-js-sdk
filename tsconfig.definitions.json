{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "stripInternal": true,
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./dist/definitions",
    "outDir": "./dist/definitions"
  },
  "include": ["src"],
  "exclude": ["node_modules"],  
}